<style>
  .scoreMestre,
  .klubMestre,
  .galleri {
    display: contents;
  }
  .pictureGrid {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  #picture1 {
    grid-column: 1/3;
    grid-row: 1/2;
    aspect-ratio: 366/245;
    object-fit: cover;
  }

  #picture4 {
    grid-column: 1/3;
    grid-row: 3/4;
  }
  .grid {
    display: grid;
    grid-row: 1fr auto;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    margin: 0 auto;
  }

  .selector {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
