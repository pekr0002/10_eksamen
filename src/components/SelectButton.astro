---
const Cup = Astro.props.Cup;
const Text = Astro.props.Text;
const Class = Astro.props.Class;
---

<a class=`galleryButton ${Class}` href="javascript:void(0)" data-cup={Cup}
  >{Text}</a
>

<style>
  a {
    display: flex;
    width: 20rem;
    height: 3.75rem;
    padding: 1rem 4.8rem;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
    border-radius: var(--BorderRadiusBig);
    border: 2px solid var(--Black);
    font-weight: 400;
    margin: 10px auto;
    background-color: var(--OffWhite);
    color: var(--Black);
  }

  .active {
    background-color: var(--Red100);
    color: var(--White);
    border: 2px solid var(--Red100);
  }
  a:hover {
    background-color: var(--Green100);
    border: 2px solid var(--Green100);
    color: var(--White);
  }
</style>
<script></script>
