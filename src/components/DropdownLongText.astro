---
const Title = Astro.props.Title;
const Paragraph1 = Astro.props.Paragraph1;
const Paragraph2 = Astro.props.Paragraph2;
const Image = Astro.props.Image;
const ImageAlt = Astro.props.ImageAlt;
---

<article>
  <div class="dropdown">
    <span> <h2>{Title}</h2></span>
    <div class="dropdownContent">
      <p class="p1">{Paragraph1}</p>
      <p class="p2">{Paragraph2}</p>
      <img src={Image} alt={ImageAlt} />
    </div>
  </div>
</article>

<style>
  article {
    background-color: var(--White);
    box-shadow: var(--BoxShadow);
    border-radius: var(--BorderRadiusBig);
    margin: 2rem auto;
    padding: 1.5rem 1.5rem 1.5rem 2rem;
  }

  h2,
  p {
    padding: 0;
    text-align: left;
  }

  .dropdown {
    position: relative;
    display: block;
    width: 100%;
  }

  .dropdownContent {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3.5rem;
    margin: 1rem 0;
    display: none;
    position: relative;
    z-index: 1;
    width: 100%;
    overflow: auto;
  }

  .dropdown:hover .dropdownContent {
    display: grid;
  }

  .p1 {
    grid-column: 1;
    grid-row: 1;
  }

  .p2 {
    grid-column: 2;
    grid-row: 1 / span 2;
  }

  img {
    grid-column: 1;
    grid-row: 2;
  }
</style>
