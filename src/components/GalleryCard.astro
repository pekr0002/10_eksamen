    border-radius: 15px;
    display: grid;
    grid-template-rows: subgrid;
    grid-row: span 3;
    max-width: 250px;
    padding: 7px 8px;
    gap: 4px;
    background-color: var(--White);
    text-align: center;
    margin: 0 auto;
  }
  article img {
    aspect-ratio: 233.12/301.71;
    max-width: 233.117px;
    object-fit: cover;
  }
