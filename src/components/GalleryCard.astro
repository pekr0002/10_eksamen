---
// astro props
const { gallery, index } = Astro.props;
// const for image url
const Url = `/gallerypage/${gallery.cup}/${gallery.cup}${gallery.year}.webp`;
---

<!-- hightlight if first item in list -->
<li class=`${gallery.cup} ${index===0 ? 'highlight':''} galleryItem`>
  <article>
    <h3>{gallery.cup} {gallery.year}</h3>
    <h4>{gallery.name}</h4>
    <img src={Url} alt=`Vinderen ${gallery.year}, ${gallery.name}` />
    <img
      class="newestWinner"
      src="/decorations.svg"
      alt="dekoration for nyeste vinder"
    />
  </article>
</li>
<style>
  li {
    display: grid;
  }
  h3 {
    text-transform: capitalize;
    color: var(--Green100);
    font-size: 1.25rem;
  }
  h4 {
    text-transform: capitalize;
    font-size: 1.5rem;
    font-family: cabin, sans-serif;
  }
  article {
    border-radius: var(--BorderRadiusBig);
    display: grid;
    grid-template-rows: subgrid;
    grid-row: span 3;
    padding: 7px 8px;
    gap: 4px;
    background-color: var(--White);
    text-align: center;
    margin: 0 auto;
    overflow: hidden;
  }
  article img {
    margin-top: 10px;
    aspect-ratio: 233.12/301.71;
    max-width: 233.117px;
    border-radius: 0px 0px 23px 23px;
  }

  .newestWinner {
    display: none;
  }
  /* computerview */
  @media (min-width: 1075px) {
    .highlight {
      grid-column: 1/3;
      grid-row: 1/3;

      article {
        img {
          max-width: 484.875px;
          width: 100%;
          aspect-ratio: 484.88/627.54;
        }
      }
      .newestWinner {
        display: block;
        position: relative;
        top: 60%;
        left: -10%;
        height: 50%;
      }
    }
  }
</style>
